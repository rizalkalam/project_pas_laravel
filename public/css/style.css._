@import url("https://fonts.googleapis.com/css2?family=Barlow+Condensed&family=Kanit:ital,wght@1,200&family=Lobster&family=Poppins&family=Roboto:wght@500;700&family=Staatliches&display=swap");

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: "Poppins", sans-serif;
}

::-webkit-scrollbar {
    width: 10px;
    height: 20px;
}

::-webkit-scrollbar-thumb {
    background-color: #e0c28d;
    border-radius: 50px;
}

::-webkit-scrollbar-track {
    background-color: #eee;
}

nav {
    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.135);
}

#dashboard {
    background: url(/assets/background.png);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    height: 100vh;
}

section {
    height: 100vh;
}

nav {
    position: fixed;
}

.navigasi {
    justify-content: right;
}

.title-dashboard {
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    height: 100vh;
    font-size: 60px;
    text-shadow: 5px 5px 2px rgba(0, 0, 0, 0.453);
}

.jumbotron {
    background-color: #eee;
}

.gambar {
    transition: 0.5s ease-in;
    filter: grayscale(100%);
    box-shadow: none;
}

.gambar:hover {
    transform: scale(1.02);
    filter: none;
    cursor: pointer;
    box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.135);
}

.nama-produk {
    position: relative;
    z-index: 2;
    margin-top: -40px;
    font-size: 15px;
}

.produk {
    transition: transform 0.5s ease-in;
    border: none;
}

.produk:hover {
    transform: translateY(-7px);
    cursor: pointer;
}

.img-promo {
    width: 500px;
    height: auto;
    z-index: 10;
    display: flex;
    float: right;
    margin-top: -160px;
    margin-right: 100px;
}

.diskon {
    margin-top: 350px;
}

.promo {
    margin-top: -150px;
}

.btn {
    background-color: #e0c28d;
    color: white;
    border-radius: none;
    width: 180px;
    padding: 10px 20px;
    margin-top: -40px;
}

.btn:hover {
    color: white;
    background-color: #d0b07a;
}

.sosmed {
    margin: 10px;
    transition: transform 0.5s ease-in;
}

.sosmed:hover {
    transform: translateY(-7px);
    cursor: pointer;
}

footer {
    margin-bottom: -15px;
}

.back {
    background-color: #d0b07a;
    width: 50px;
    height: 50px;
    border-radius: 50px;
    margin: 30px;
    border: none;
    box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.144);
    transition: transform 0.5s ease-in;
}

.back:hover {
    transform: translateX(-7px);
    cursor: pointer;
}

.icon-back {
    color: white;
    margin: 10px;
}

button {
    border: none;
}

.detail-barang {
    display: flex;
}

.gambar-barang {
    width: 400px;
    height: auto;
    margin-left: 250px;
}
